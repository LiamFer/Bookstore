@using Orion_Books.ViewModels
@model EditUserViewModel

<div class="container-fluid p-6 position-relative boxPattern">
    <div class="container">
        <div class="bg-white p-4 rounded shadow">
            <div class="text-center mb-4">
                <h2 class="text-black">Editar Perfil do Usuário</h2>
            </div>
            <form asp-action="EditUserProfile" method="post" class="mt-4">
                <input type="hidden" asp-for="@Model.endereco.Id" value="@Model.endereco.Id">

                <div class="form-group">
                    <label for="Rua" class="form-label">Rua</label>
                    <input type="text" class="form-control" id="Rua" asp-for="@Model.endereco.Rua" value="@Model.endereco.Rua" required>
                </div>

                <div class="form-group mt-3">
                    <label for="Bairro" class="form-label">Bairro</label>
                    <input type="text" class="form-control" id="Bairro" asp-for="@Model.endereco.Bairro" value="@Model.endereco.Bairro" required>
                </div>

                <div class="form-group mt-3">
                    <label for="Cidade" class="form-label">Cidade</label>
                    <input type="text" class="form-control" id="Cidade" asp-for="@Model.endereco.Cidade" value="@Model.endereco.Cidade" required>
                </div>

                <div class="form-group mt-3">
                    <label for="Numero" class="form-label">Número</label>
                    <input type="text" class="form-control" id="Numero" asp-for="@Model.endereco.Numero" value="@Model.endereco.Numero" required>
                </div>

                <div class="form-group mt-3">
                    <label for="UserId" class="form-label">ID do Usuário</label>
                    <input type="text" class="form-control" id="UserId" asp-for="@Model.id" value="@Model.id" readonly>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

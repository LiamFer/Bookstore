@model IEnumerable<Livro>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid position-relative bg-image text-white"
     style="background-image: url('https://raw.githubusercontent.com/LiamFer/ATLAS/refs/heads/main/atlas_web/src/images/home.jpg'); height: 100vh; background-size: cover; background-position: center;">
    <div class="area">
        <ul class="circles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>

    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="text-center">
            <h5 class="text-uppercase mb-3" style="letter-spacing: 3px;">Em busca do Novo?</h5>
            <h1 class="display-1 fw-bold">TIME TO READ</h1>
            <a class="btn btn-outline-light btn-lg px-4 py-2" asp-area="" asp-controller="Livro" asp-action="Index" role="button">Nossa Biblioteca</a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-8 carousel-container mb-4">
            <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/Misc/biography.png" class="d-block w-100" alt="Image 1">
                        <div class="overlay">
                            <div class="text">Biografia</div>
                            <a class="btn" asp-controller="Livro" asp-action="Index">Veja na Biblioteca</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/Misc/fantasy.jpg" class="d-block w-100" alt="Image 2">
                        <div class="overlay">
                            <div class="text">Fantasia</div>
                            <a class="btn" asp-controller="Livro" asp-action="Index">Veja na Biblioteca</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/Misc/history.jpg" class="d-block w-100" alt="Image 3">
                        <div class="overlay">
                            <div class="text">Histórico</div>
                            <a class="btn" asp-controller="Livro" asp-action="Index">Veja na Biblioteca</a>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-4 text-container">
            <div>
                <h2>Benefícios da <span class="text-muted">Leitura.</span></h2>
                <p class="lead">
                    A leitura transforma vidas! Ela expande o conhecimento, melhora a empatia, reduz o estresse, enriquece o vocabulário e estimula a criatividade.
                    Ler diariamente pode enriquecer sua mente e trazer inspiração para o dia a dia.
                </p>
            </div>
        </div>
    </div>
</div>

<hr class="featurette-divider" style="margin-top: 50px; margin-bottom: 50px;">

<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">

        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-green rounded box-shadow">
            <svg clip-rule="evenodd" fill="white" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" class="me-3" width="48" height="48" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m11.6 11c0-.552-.448-1-1-1-1.655 0-4.945 0-6.6 0-.552 0-1 .448-1 1v9c0 .552.448 1 1 1h6.6c.552 0 1-.448 1-1 0-2.092 0-6.908 0-9zm9.4 6c0-.552-.448-1-1-1h-6c-.538 0-1 .477-1 1v3c0 .552.448 1 1 1h6c.552 0 1-.448 1-1zm0-13c0-.552-.448-1-1-1-1.537 0-4.463 0-6 0-.552 0-1 .448-1 1v9.6c0 .552.448 1 1 1h6c.552 0 1-.448 1-1 0-2.194 0-7.406 0-9.6zm-9.4 0c0-.552-.448-1-1-1-1.655 0-4.945 0-6.6 0-.552 0-1 .448-1 1v3.6c0 .552.448 1 1 1h6.6c.552 0 1-.448 1-1 0-1.017 0-2.583 0-3.6z" fill-rule="nonzero" /></svg>

            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">Novidades e Sugestões</h6>
                <small>Com base nos seus Interesses!</small>
            </div>
        </div>

        <div class="col-10 col-sm-8 col-lg-6">
            <img src="/Misc/book_recommendations.svg" class="d-block mx-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
        </div>

        <div class="col-lg-6">
            <div class="my-3 p-3 bg-white rounded box-shadow">
                <h6 class="border-bottom border-gray pb-2 mb-0">Recomendações de Leitura</h6>

                @foreach (var Book in Model)
                {
                    <div class="media text-muted pt-3 d-flex align-items-start">
                        <img src="@Book.CapaURL" alt="Capa do Livro"
                             class="me-3 rounded-circle shadow-sm capa-livro">

                        <div class="media-body">
                            <h6 class="mt-0 mb-1 font-weight-bold" style="color: #2c3e50;">@Book.Titulo</h6>

                            <p class="text-muted mb-2" style="font-size: 0.9rem; line-height: 1.4;">
                                @(Book.Sinopse.Length > 100 ? Book.Sinopse.Substring(0, 100) + "..." : Book.Sinopse)
                            </p>
                            <a asp-controller="Livro" asp-action="Detail" asp-route-id="@Book.Id"
                               class="btn btn-sm"
                               style="background-color: #23c483; color: #ffffff; border-color: #23c483; font-weight: bold;">
                                Ver Mais
                            </a>
                        </div>
                    </div>
                    <hr class="my-3">
                }

                <small class="d-block text-right mt-3">
                    <a asp-controller="Livro" asp-action="Index">Veja nossa Biblioteca</a>
                </small>
            </div>
        </div>
    </div>
</div>



<hr class="featurette-divider" style="margin-top: 50px; margin-bottom: 50px;">


<div class="container mt-5">
    <div class="row info-container align-items-center">
        <div class="col-md-6">
            <img src="/Misc/ocean.jpg" alt="Livros em uma estante" />
        </div>
        <div class="col-md-6">
            <h3 class="highlight-title">Explore o Universo dos Livros</h3>
            <p>
                Descubra como os livros podem transportar você para novos mundos e experiências incríveis.
                Desde histórias de ficção que despertam a imaginação até biografias que inspiram, a leitura é um passaporte para o desconhecido.
            </p>
            <p>
                Não importa o gênero ou o autor, sempre há algo novo esperando por você. Comece sua próxima jornada literária hoje mesmo!
            </p>
        </div>
    </div>
    <div class="row info-container align-items-center flex-md-row-reverse">
        <div class="col-md-6">
            <img src="/Misc/girl_reading.jpg" alt="Pessoa lendo um livro" />
        </div>
        <div class="col-md-6">
            <h3 class="highlight-title">Benefícios da Leitura</h3>
            <p>
                A leitura não é apenas um passatempo – é um hábito poderoso. Ela ajuda a reduzir o estresse, melhora o foco e a memória,
                além de estimular a criatividade e enriquecer o vocabulário.
            </p>
            <p>
                Incorporar a leitura ao seu dia a dia pode transformar sua mente e abrir portas para novas possibilidades.
                Faça da leitura uma prioridade e colha os frutos desse hábito transformador.
            </p>
        </div>
    </div>
</div>



<style>

    .capa-livro {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 50%;
        display: block; 
        aspect-ratio: 1 / 1; 
    }

    .bg-image {
        background-size: cover;
        background-position: center;
    }

    .container-fluid h1, .container-fluid h5, .container-fluid p {
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }

    /* estilos do botaozinho da landing */
    .btn-outline-light {
        border: 2px solid white; 
        border-radius: 10px;
        font-weight: bold; 
        color: white;
        transition: background-color 0.3s, color 0.3s, box-shadow 0.3s; 
    }

    .btn-outline-light:hover {
        background-color: #23c483; 
        border: 2px solid #23c483;
        color: white; 
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); 
    }

    .text-white-50 {
        color: rgba(255, 255, 255, .5);
    }

    .bg-green {
        background-color: #23c483;
    }

    .border-bottom {
        border-bottom: 1px solid #e5e5e5;
    }

    .box-shadow {
        box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
    }

    .lh-100 {
        line-height: 1;
    }

    .lh-125 {
        line-height: 1.25;
    }

    .lh-150 {
        line-height: 1.5;
    }

    .carousel-container {
        position: relative;
    }

    .carousel-inner .carousel-item {
        position: relative;
    }

        .carousel-inner .carousel-item:hover .overlay {
            opacity: 0.8;
        }

        .carousel-inner .carousel-item .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .carousel-inner .carousel-item:hover .overlay .text,
        .carousel-inner .carousel-item:hover .overlay .btn {
            transform: translateY(0);
            opacity: 1;
        }

        .carousel-inner .carousel-item .overlay .text,
        .carousel-inner .carousel-item .overlay .btn {
            transform: translateY(20px);
            transition: all 0.5s ease;
            opacity: 0;
        }

        .carousel-inner .carousel-item .overlay .text {
            font-size: 1.8rem; 
            font-weight: bold; 
            color: #fff;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
        }

        .carousel-inner .carousel-item .overlay .btn {
            background-color: #23C483;
            border: none;
            padding: 10px 20px;
            margin-top: 10px;
            color: #fff;
            font-size: 1rem;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .carousel-inner .carousel-item .overlay .btn:hover {
                background-color: #1b9e6b;
                transform: scale(1.1); 
            }

    .highlight-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #23C483;
    }

    .info-container img {
        width: 100%;
        height: auto;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .info-container img:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .info-container p {
        color: #555;
    }

    .info-container {
        margin-bottom: 2rem;
    }

    .area {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
    }

    .circles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .circles li {
        position: absolute;
        display: block;
        list-style: none;
        width: 20px;
        height: 20px;
        background: rgba(255, 255, 255, 0.575);
        animation: animate 25s linear infinite;
        bottom: -150px;
    }

    .circles li:nth-child(1) {
        left: 25%;
        width: 80px;
        height: 80px;
        animation-delay: 0s;
    }

    .circles li:nth-child(2) {
        left: 10%;
        width: 20px;
        height: 20px;
        animation-delay: 2s;
        animation-duration: 12s;
    }

    .circles li:nth-child(3) {
        left: 70%;
        width: 20px;
        height: 20px;
        animation-delay: 4s;
    }

    .circles li:nth-child(4) {
        left: 40%;
        width: 60px;
        height: 60px;
        animation-delay: 0s;
        animation-duration: 18s;
    }

    .circles li:nth-child(5) {
        left: 65%;
        width: 20px;
        height: 20px;
        animation-delay: 0s;
    }

    .circles li:nth-child(6) {
        left: 75%;
        width: 110px;
        height: 110px;
        animation-delay: 3s;
    }

    .circles li:nth-child(7) {
        left: 35%;
        width: 150px;
        height: 150px;
        animation-delay: 7s;
    }

    .circles li:nth-child(8) {
        left: 50%;
        width: 25px;
        height: 25px;
        animation-delay: 15s;
        animation-duration: 45s;
    }

    .circles li:nth-child(9) {
        left: 20%;
        width: 15px;
        height: 15px;
        animation-delay: 2s;
        animation-duration: 35s;
    }
    .circles li:nth-child(10) {
        left: 85%;
        width: 150px;
        height: 150px;
        animation-delay: 0s;
        animation-duration: 11s;
    }
    @@keyframes animate {
        0% {
            transform: translateY(0) rotate(0deg);
            opacity: 1;
            border-radius: 0;
        }

        100% {
            transform: translateY(-1000px) rotate(720deg);
            opacity: 0;
            border-radius: 50%;
        }
    }
    .container-fluid .text-center {
        position: relative;
        z-index: 1;
    }

</style>

